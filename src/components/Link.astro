---
export interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noreferrer"
  tabindex="0"
  class="block w-full p-2 hover:bg-crt-text hover:text-crt-screen active:bg-crt-text active:text-crt-screen focus:bg-crt-text focus:text-crt-screen transition-all duration-150 ease-in-out"
  ><slot />
</a>
